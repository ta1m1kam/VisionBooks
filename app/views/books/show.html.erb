<h1 class="mt-5 text-center"><%= @book.title %></h1>
<div class="text-center mt-4 mb-4">
  <img src="<%= @book.image_url %>" alt=""　height="130">
  <%= form_with model: @book ,local: true do |f| %>
　　　　<div class="form-group">
				<%= f.label :last_rental, class: 'bmd-label-floating' %>
				<%= f.text_field :last_rental , value: @user.name%>
			</div>
　　　　<%= f.submit "借りる", class: "btn btn-primary" %>
　<% end %>
</div>
<table class="table">
　<thread>
    <th scope="col">項目</th>
    <th scope="col">内容</th>
  </thread>
  <tbody>
    <tr>
      <th scope="row">最後に借りた人</th>
      <td><%= @book.last_rental %></td>
    </tr>
    <tr>
      <th scope="row">更新日時</th>
      <td><%= @book.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
    </tr>
    <tr>
      <th scope="row">場所</th>
      <td><%= @book.place.name %></td>
    </tr>
    <tr>
      <th scope="row">著者</th>
      <td><%= @book.author %></td>
    </tr>
    <tr>
      <th scope="row">説明</th>
      <td><%= @book.description %></td>
    </tr>
    <tr>
      <th scope="row">出版社</th>
      <td><%= @book.publisher %></td>
    </tr>
    <tr>
      <th scope="row">出版日</th>
      <td><%= @book.publish_date %></td>
    </tr>
    <tr>
      <th scope="row">ページ数</th>
      <td><%= @book.page_count %></td>
    </tr>
    <tr>
      <th scope="row">Textship</th>
      <td><%= @book.textship %></td>
    </tr>
  </tbody>
</table>
<%= link_to "編集", edit_book_path(@book) %> |
<%= link_to "削除", @book, method: :delete,
                                  data: { confirm: "You sure?" } %>
