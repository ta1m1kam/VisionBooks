<%= javascript_pack_tag 'book/new.js' %>


<div class="row">
	<div class="col">
		<h1 class="text-center mt-5">書籍編集</h1>
    <div class="text-center mt-4 mb-4">
    <img src="<%= @book.image_url %>" alt=""　height="130">
    </div>
		<%= form_with model: @book ,local: true do |f| %>

			<div class="form-group">
				<%= f.label :place_id , class: 'bmd-label-floating' %>
				<%= f.collection_select :place_id, Place.all, :id, :name, prompt:true, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :title, class: 'bmd-label-floating' %>
				<%= f.text_field :title, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :author, class: 'bmd-label-floating' %>
				<%= f.text_field :author, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :publisher, class: 'bmd-label-floating' %>
				<%= f.text_field :publisher, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :publish_date, class: 'bmd-label-floating' %>
				<%= f.text_field :publish_date, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :description, class: 'bmd-label-floating' %>
				<%= f.text_area :description, class: 'form-control' %>
			</div>
			<div class="form-group">
				<div id="book_thumbnail"></div>
				<%= f.text_area :image_url, class: 'form-control' %>
			</div>
      <div class="form-group">
				<%= f.label :textship, class: 'bmd-label-floating' %>
				<%= f.text_area :textship, class: 'form-control' %>
			</div>

			<%= f.submit "Save Changes", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>

